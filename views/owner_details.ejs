<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/_head.ejs', { title: 'Owner Details' }); %>
    <body class="bg-gray-100 min-h-screen">
        <%- include('./partials/_navbar.ejs', { name: owner.name }); %>

        <main class="max-w-3xl mx-auto p-6 bg-white shadow-md rounded-md mt-10">
            <!-- Error message if error exists -->
            <% if (typeof error !== 'undefined' && error) { %>
            <div
                class="flex items-start bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded-md"
            >
                <!-- Error Icon -->
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="lucide lucide-shield-x"
                >
                    <path
                        d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"
                    />
                    <path d="m14.5 9.5-5 5" />
                    <path d="m9.5 9.5 5 5" />
                </svg>
                <!-- Error Text -->
                <div>
                    <strong class="font-semibold">Error:</strong>
                    <span><%= error %></span>
                </div>
            </div>
            <% } else { %>

            <div class="flex items-center mb-6">
                <!-- User Icon -->
                <div
                    class="w-20 h-20 flex items-center justify-center bg-gray-200 rounded-full mr-4"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="40"
                        height="40"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        class="lucide lucide-user"
                    >
                        <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2" />
                        <circle cx="12" cy="7" r="4" />
                    </svg>
                </div>
                <!-- User Info -->
                <div>
                    <h1 class="text-2xl font-semibold text-gray-700">
                        Owner Details
                    </h1>
                    <p class="text-gray-600">
                        Manage your account information below.
                    </p>
                </div>
            </div>

            <div class="space-y-4">
                <!-- Name -->
                <p class="text-gray-700">
                    <strong class="font-medium">Name:</strong> <%= owner.name %>
                </p>
                <!-- Email -->
                <p class="text-gray-700">
                    <strong class="font-medium">Email:</strong> <%= owner.email
                    %>
                </p>
                <!-- Account Created At -->
                <p class="text-gray-700">
                    <strong class="font-medium">Created At:</strong>
                    <%= new Date(owner.createdAt).toDateString() %>
                </p>
            </div>

            <!-- Buttons Section -->
            <div class="mt-6 flex space-x-4">
                <!-- Update Account Button -->
                <a
                    href="/owners/me/update"
                    class="px-6 py-2 bg-black text-white rounded-md hover:bg-gray-900 focus:outline-none focus:ring-2 focus:ring-gray-500"
                >
                    Update Account Information
                </a>
                <!-- Delete Account Button -->
                <form action="/owners/me/delete" method="post">
                    <button
                        type="submit"
                        id="delete-account-btn"
                        class="px-6 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-400"
                    >
                        Delete Account
                    </button>
                </form>
            </div>
        </main>
        <% } %>
    </body>
</html>
