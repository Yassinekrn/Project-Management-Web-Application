<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/_head.ejs', {title: 'Owner Login'}); %>
    <body class="bg-gray-100 min-h-screen flex items-center justify-center">
        <div class="w-full max-w-md p-6 bg-white shadow-md rounded-lg">
            <!-- Success message -->
            <% if (typeof message !== "undefined") { %>
            <div class="bg-green-100 text-green-800 p-4 mb-4 text-sm rounded">
                <%= message %>
            </div>
            <% } %>
            <!-- Error message if error exists -->
            <% if (typeof error !== 'undefined' && error) { %>
            <div
                class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded-md"
            >
                <strong class="font-bold">Error: </strong>
                <span><%= error %></span>
            </div>
            <% } %>

            <!-- Form -->
            <form action="/auth/owner/login" method="POST" class="space-y-6">
                <h1 class="text-xl font-semibold text-gray-700">
                    Login to Your Account
                </h1>

                <div>
                    <label
                        for="email"
                        class="block text-sm font-medium text-gray-600"
                        >Email</label
                    >
                    <input
                        type="text"
                        name="email"
                        id="email"
                        required
                        class="mt-1 w-full px-3 py-2 border rounded-md text-gray-700 focus:outline-none focus:ring-2 focus:ring-black"
                    />
                </div>

                <div>
                    <label
                        for="password"
                        class="block text-sm font-medium text-gray-600"
                        >Password</label
                    >
                    <input type="password" name="password" id="password"
                    required class="mt-1 w-full px-3 py-2 border rounded-md
                    text-gray-700 focus:outline-none focus:ring-2
                    focus:ring-black />
                </div>

                <div class="flex items-center justify-between text-sm">
                    <p class="text-gray-600 text-sm">
                        Don't have an account?
                        <a
                            href="/auth/owner/signup"
                            class="text-black hover:underline"
                            >Sign up here</a
                        >
                    </p>
                </div>

                <button
                    type="submit"
                    class="w-full bg-black text-white py-2 px-4 rounded-md hover:bg-gray-900 focus:outline-none focus:ring-2 focus:ring-gray-500"
                >
                    Login
                </button>
            </form>
        </div>
    </body>
</html>
