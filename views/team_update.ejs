<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/_head.ejs', { title }); %>
        <style>
            /* Tailwind customization for primary black */
            .text-primary {
                color: #000;
            }
            .bg-primary {
                background-color: #000;
            }
            .hover\:bg-primary:hover {
                background-color: #333;
            }
        </style>
    </head>
    <body class="bg-gray-100 min-h-screen">
        <!-- Navbar -->
        <%- include('./partials/_navbar.ejs', { name: owner.name }); %>

        <div class="container mx-auto px-4 py-8">
            <h1 class="text-2xl font-bold text-primary mb-6">Update Team</h1>

            <!-- Form for updating the team -->
            <form
                action="/teams/update/<%= team._id %>"
                method="POST"
                class="bg-white shadow-md rounded-lg p-6 space-y-4"
            >
                <!-- Team Name -->
                <div>
                    <label
                        for="name"
                        class="block text-sm font-medium text-gray-700 mb-1"
                    >
                        Team Name
                    </label>
                    <input
                        type="text"
                        name="name"
                        id="name"
                        value="<%= team.name %>"
                        class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary"
                        required
                    />
                </div>

                <!-- Team Description -->
                <div>
                    <label
                        for="description"
                        class="block text-sm font-medium text-gray-700 mb-1"
                    >
                        Team Description
                    </label>
                    <textarea
                        name="description"
                        id="description"
                        rows="4"
                        class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary"
                        required
                    >
<%= team.description %></textarea
                    >
                </div>

                <!-- Team Members -->
                <div>
                    <label
                        for="members"
                        class="block text-sm font-medium text-gray-700 mb-1"
                    >
                        Team Members (Emails, separated by commas)
                    </label>
                    <input
                        type="text"
                        name="members"
                        id="members"
                        value="<%= team.members.map(member => member.email).join(', ') %>"
                        class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary"
                        required
                    />
                </div>

                <!-- Submit Button -->
                <div class="flex justify-end">
                    <button
                        type="submit"
                        class="bg-primary text-white font-medium px-4 py-2 rounded-md hover:bg-primary focus:outline-none focus:ring-2 focus:ring-primary"
                    >
                        Update Team
                    </button>
                </div>
            </form>
        </div>
    </body>
</html>
