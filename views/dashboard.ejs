<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('./partials/_head.ejs', {title: 'Owner Dashboard'}); %>
    </head>
    <body class="bg-gray-100 min-h-screen">
        <!-- Navbar -->
        <%- include('./partials/_navbar.ejs', {name: owner.name}); %>
        <!-- Dashboard Content -->
        <div class="max-w-7xl mx-auto px-4 py-8">
            <h2 class="text-2xl font-bold text-gray-700 mb-6">
                Welcome, <%= owner.name %>
            </h2>
            <p class="text-gray-600 mb-6">
                You are logged in as: <%= owner.email %>
            </p>

            <!-- Create New Project Button -->
            <div class="mb-6">
                <a
                    href="/projects/"
                    class="bg-black text-white px-6 py-3 rounded-md hover:bg-gray-900 focus:outline-none focus:ring-2 focus:ring-gray-500"
                >
                    Create a New Project
                </a>
            </div>

            <!-- Projects Section -->
            <div>
                <h3 class="text-xl font-semibold text-gray-700 mb-4">
                    Your Projects
                </h3>
                <% if ( owner && !owner.projects || owner && owner.projects &&
                owner.projects.length === 0) { %>
                <p class="text-gray-600">No projects created yet.</p>
                <% } else { %>
                <ul class="space-y-4">
                    <% owner.projects.forEach((project) => { %>
                    <li
                        class="bg-white shadow-md p-4 rounded-md border flex justify-between items-center"
                    >
                        <div>
                            <h4 class="text-lg font-medium text-gray-800">
                                <%= project.name %>
                            </h4>
                            <p class="text-gray-600 text-sm">
                                Created on: <%= project.createdAt.toDateString()
                                %>
                            </p>
                        </div>
                        <a
                            href="/projects/<%= project.id %>"
                            class="text-blue-600 hover:underline text-sm"
                        >
                            View Details
                        </a>
                    </li>
                    <% }) %>
                </ul>
                <% } %>
            </div>
        </div>
    </body>
</html>
