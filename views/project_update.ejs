<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/_head.ejs', { title: 'Update Project' }); %>
    <body class="bg-gray-100 min-h-screen">
        <%- include('./partials/_navbar.ejs', { name: owner.name }); %>

        <main class="max-w-4xl mx-auto p-6 bg-white shadow-md rounded-md mt-10">
            <h1 class="text-2xl font-semibold text-gray-700 mb-6">
                Update Project
            </h1>

            <!-- Error Message -->
            <% if (typeof error !== 'undefined' && error) { %>
            <div
                class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6 rounded-md"
            >
                <strong class="font-semibold">Error:</strong>
                <span><%= error %></span>
            </div>
            <% } %>

            <form
                action="/projects/<%= project._id %>/update"
                method="POST"
                class="space-y-6"
            >
                <!-- Project Name -->
                <div>
                    <label
                        for="name"
                        class="block text-sm font-medium text-gray-600 mb-1"
                        >Project Name:</label
                    >
                    <input
                        type="text"
                        id="name"
                        name="name"
                        value="<%= project.name %>"
                        required
                        class="w-full px-3 py-2 border rounded-md text-gray-700 focus:outline-none focus:ring-2 focus:ring-black"
                    />
                </div>

                <!-- Description -->
                <div>
                    <label
                        for="description"
                        class="block text-sm font-medium text-gray-600 mb-1"
                        >Description:</label
                    >
                    <textarea
                        id="description"
                        name="description"
                        required
                        rows="5"
                        class="w-full px-3 py-2 border rounded-md text-gray-700 focus:outline-none focus:ring-2 focus:ring-black"
                    >
<%= project.description %></textarea
                    >
                </div>

                <!-- Action Buttons -->
                <div class="flex justify-between items-center space-x-4">
                    <!-- Cancel Button -->
                    <a
                        href="/projects/<%= project._id %>"
                        class="bg-gray-200 text-gray-800 py-2 px-6 rounded-md hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500"
                    >
                        Cancel
                    </a>

                    <!-- Save Changes Button -->
                    <button
                        type="submit"
                        class="bg-black text-white py-2 px-6 rounded-md hover:bg-gray-900 focus:outline-none focus:ring-2 focus:ring-gray-500"
                    >
                        Save Changes
                    </button>
                </div>
            </form>

            <!-- Delete Button -->
            <form
                action="/projects/<%= project._id %>/delete"
                method="POST"
                class="mt-6"
                onsubmit="return confirm('Are you sure you want to delete this project? This action cannot be undone.')"
            >
                <button
                    type="submit"
                    class="w-full bg-red-600 text-white py-2 px-6 rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-400"
                >
                    Delete Project
                </button>
            </form>
        </main>
    </body>
</html>
